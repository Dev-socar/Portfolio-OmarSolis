---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "@src/components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Desarrollador web frontend en Mérida, Yucatán, con enfoque en interfaces modernas, trabajo colaborativo, aprendizaje continuo y guía a otros desarrolladores."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpeg" href="/omarLogo.jpeg" />

    <meta
      property="og:title"
      content="Desarrollador Web Frontend en Mérida | Omar Solís"
    />
    <meta
      property="og:description"
      content="Desarrollador web frontend de 26 años en Mérida, Yucatán. Apasionado por crear interfaces modernas, aprender de forma autodidacta y compartir conocimiento."
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://portfolio-omar-solis.vercel.app/"
    />
    <meta
      property="og:image"
      content="https://portfolio-omar-solis.vercel.app/omarLogo.jpeg"
    />
    <meta property="og:locale" content="es_MX" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Desarrollador Web Frontend en Mérida | Omar Solís"
    />
    <meta
      name="twitter:description"
      content="Frontend developer en Mérida, Yucatán. Interfaces modernas, trabajo en equipo, aprendizaje autodidacta y mentoría."
    />
    <meta
      name="twitter:image"
      content="https://portfolio-omar-solis.vercel.app/omarLogo.jpeg"
    />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-white text-zinc-900 dark:bg-zinc-900 dark:text-zinc-100 pt-16 sm:pt-0"
  >
    <Header />
    <div class="py-8 min-h-[calc(100vh-160px)]">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<script>
  import { setupAos } from "../js/setupAos";
  setupAos();

  document.addEventListener("DOMContentLoaded", setupAos);
  document.addEventListener("astro:page-load", setupAos);
</script>

<style is:global>
  .time-line-container > div:last-child .education__time > .education__line {
    display: none;
  }
</style>
