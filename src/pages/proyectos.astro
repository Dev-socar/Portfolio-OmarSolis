---
import Layout from "../layouts/Layout.astro";
import ProjectsList from "@src/components/ProjectsList.astro";
import { projects } from "@src/projects/project";
---

<Layout title="Omar Solis - Proyectos">
  <section>
    <main>
      <h1
        class="text-center text-zinc-900 dark:text-white md:text-left text-4xl font-bold mb-4"
      >
        Todos Mis Proyectos
      </h1>
      <p class="text-base mb-10 text-zinc-900 dark:text-white">
        Todo mi portafolio de poryectos, desde proyectos a clientes hasta
        proyectos personales.
      </p>
      <ProjectsList proyectos={projects} />
    </main>
  </section>
</Layout>

<style>
  main,
  section {
    margin: auto;
    padding: 1rem;
    width: 1000px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
